<div id="editor-panel" class="flex h-full flex-col bg-[var(--color-bg-editor)]">
  <textarea
    id="markdown-input"
    aria-label="Markdown editor"
    class="flex-1 resize-none overflow-y-auto border-none bg-[var(--color-bg-editor)] p-4 pb-20 text-sm leading-relaxed text-[var(--color-text-primary)] outline-none placeholder:text-[var(--color-text-secondary)] md:pb-4"
