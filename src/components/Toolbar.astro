---
import { TOOLBAR_BUTTONS } from '@/types/toolbar';

const separatorAfter = new Set(['italic', 'heading3', 'image', 'ordered-list', 'blockquote']);
---

<div class="toolbar flex flex-nowrap items-center gap-1 overflow-x-auto">
  {
    TOOLBAR_BUTTONS.map((btn) => (
      <>
        <button
          type="button"
          class="toolbar-btn shrink-0 rounded px-2 py-1 text-xs font-medium text-[var(--color-text-secondary)] hover:bg-[var(--color-border)] hover:text-[var(--color-text-primary)] active:translate-y-px"
          data-action={btn.action}
          title={btn.title}
        >
          {btn.label}
        </button>
        {separatorAfter.has(btn.action) && (
          <span class="mx-0.5 inline-block h-5 w-px shrink-0 bg-[var(--color-border)]" />
        )}
      </>
    ))
  }
</div>
